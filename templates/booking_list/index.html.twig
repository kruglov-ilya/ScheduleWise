{% extends 'base.html.twig' %}

{% block title %}Список записей{% endblock %}

{% block body %}

    <nav class="bg-white border-gray-200 dark:bg-gray-900">
        <div class="flex flex-wrap items-center justify-between max-w-screen-xl mx-auto p-4">
            <a href="https://flowbite.com" class="flex items-center space-x-3 rtl:space-x-reverse">
                <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">Мои записи</span>
            </a>
            <div class="flex items-center md:order-2 space-x-1 md:space-x-2 rtl:space-x-reverse">
                <a href="{{ path('app_booking') }}" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 md:px-5 md:py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Записаться</a>
            </div>
        </div>
    </nav>

    <div class="relative overflow-x-auto max-w-screen-xl mx-auto mt-6">
        <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Услуга
                </th>
                <th scope="col" class="px-6 py-3">
                    Дата и время
                </th>
                <th scope="col" class="px-6 py-3">
                    Статус
                </th>
            </tr>
            </thead>
            <tbody>
            {% for booking in bookings %}
            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                    {{ booking.service.name }}
                </th>
                <td class="px-6 py-4">
                    {{ booking.timeslot.time }}
                </td>
                <td class="px-6 py-4">
                    {{ booking.canceled ? 'Отменена' : 'Создана' }}
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
